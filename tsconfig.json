        "target": "ESNext",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": [
            "esnext"
        ],
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        },
        "esModuleInterop": true
    }
}